{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    // "strict": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist.cjs",
    "rootDir": "./lib",
    "strictNullChecks": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    // "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    // "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "paths": {
      "@lib/*": [
        "./lib/*"
      ],
      "@tests/*": [
        "./tests/*"
      ]
    }
  },
  "include": [
    "lib/*"
  ]
}
